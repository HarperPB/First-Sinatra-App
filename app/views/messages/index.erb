<h1>All Messages</h1>
<hr/>

<% @messages.each do |message| %>
  <div class="message">
    <h3> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
    <div>
    <a href="/messages/<%= message.id %>"><%= message.url %></a>
    </div>
  </div>
<% end %>

<hr/>
<a href="/messages/new">Post a message... It's FREE (for now)!</a>